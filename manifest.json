{
  "manifest_version": 2,

  "name": "Hydrator",
  "description": "Allows you to set a reminder to drink water.",
  "version": "0.0.0.1",
  "author": "Anuj Kadam",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["reminder.js"],
    "persistent": true
  },

  "permissions": [
    "notifications",
    "alarms",
    "storage"
  ]
}